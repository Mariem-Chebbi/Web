{% extends 'base_back.html.twig' %}
{% block body %}
<style>
    button {
        background-color: #1ab394;
        border-color: #1ab394;
        color: #FFFFFF;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.5;
        border-radius: 3px;
    }
    table {
   border: 1px dashed #ccc;
  border-collapse: collapse;
    }
    table td, table th {
  border: 1px dashed #ccc;
  padding: 10px;
  text-align: center;
}
    
</style>
<div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h3>Les services </h3>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-6 b-r"><h3 class="m-t-none m-b">ajouter un Service</h3>
                                <br>

                                {{ form_start(formClass,{'attr': {'novalidate': 'novalidate'}}) }}
                                        {{ form_label(formClass.Libelle) }}
                                        <br>
                                        {{ form_widget(formClass.Libelle) }}
                                         {{ form_errors(formClass.Libelle,{'attr':{'class':'text-danger'}}) }}
                                        <br>
                                        <br>
                                
                                        {{ form_label(formClass.Description) }}
                                        <br>
                                        {{ form_widget(formClass.Description) }}
                                         {{ form_errors(formClass.Description,{'attr':{'class':'text-danger'}}) }}
                                        <br>
                                        <br>
                                        
                                        {{ form_label(formClass.Icone) }}
                                        <br>
                                        {{ form_widget(formClass.Icone) }}
                                         {{ form_errors(formClass.Icone,{'attr':{'class':'text-danger'}}) }}
                                        <br>
                                        <br>

                                        

                                    {{ form_end(formClass) }}
                            </div>
                            <div class="col-sm-6"><h3>List des services</h3>
                                
                                
                                <table>
                                    <tr>
                                    <th>  Id  </th>
                                    <th>  Libelle  </th>
                                    <th>  Description  </th>
                                    <th>  Icone  </th>
                                    <th>  action  </th>
                                    </tr>
                                    <tr>
                                    {% for i in Services %}
                                        <td>{{i.id}}</td>
                                        <td>{{i.Libelle}}</td>
                                        <td>{{i.Description}}</td>
                                        <td><img src= "{{ asset('images/' ~ i.Icone) }}" style="width: 50px; height: auto;" /></td>
                                        <td>
                                            <a href="{{path('supprimerServices',{'id':i.id}) }}" class="btn btn-white"><i class="fa fa-trash" aria-hidden="true"></i>
                                            <a href="{{path('updatServices',{'id':i.id}) }}" class="btn btn-white"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </tr>
                                    {%endfor %}

                                </table>
                            </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                

                {% endblock %}