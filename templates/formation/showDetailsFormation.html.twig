{% extends 'base_front.html.twig' %}
{% block formation %}
<li class="has-sub">
    <a href="javascript:void(0)">Formations</a>
    <ul class="sub-menu">
        <li><a href="{{path('afficheC')}}">Formations</a></li>
        <li><a href="{{path('afficheCertif')}}">Mes certifs</a></li>
        
    </ul>
</li>
{% endblock %}
{% block body %}  
  
  <section class="main-banner" id="top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 align-self-center">
        <div class="main-button-gradient">
              <div class=""><a href="{{path('afficheC')}}">Retour</a></div><br></br>
            </div>
          <div class="header-text">
            <h6>Bienvenue à notre formation</h6>
            <h6>{{Formation.dateFormation|date('Y-m-d')}}</h6>
            <h2>Formation : <em>{{Formation.libelle}}</em></h2>
            <p>{{Formation.description}}</p><br>
            {# <div class="main-button-gradient">
              <a href="#">s'inscrire</a>
            </div> #}
            {% if app.user %}
                  {% if Formation.isInscription(app.user) %}
                      <div class="scroll-to-section"><a href="{{ path('inscription_remove', {'id': Formation.getInscriptions(app.user).getId()}) }}">✅</a></div>
                  {% else %}
                      <div class="main-button-gradient" style="width: 10px ; height: auto;">
          
                      <a href="{{ path('inscription_add', {'id': Formation.getId()}) }}">s'inscrire</a></div>
                  {% endif %}
              {% endif %}
          </div>
        </div>
        <div class="col-lg-6">
          <div class="right-image">
          <img src= "{{ asset('images/' ~ Formation.image) }}" style="width: 500px; height: auto;" />
            {# <img src="assets/images/banner-right-image.png" alt=""> #}
          </div>
        </div>
      </div>
    </div>
  </section>

  {% endblock %}