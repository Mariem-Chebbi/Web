{% extends 'base_front.html.twig' %}

{% block body %}
<style>
    /* Define the primary color */
    :root {
        --primary-color: #007bff;
    }

    /* Use the primary color for headings and buttons */
    h3, .btn-primary {
        color: var(--primary-color);
    }

    /* Increase the font size of headings */
    h3 {
        font-size: 36px;
    }

    /* Add more whitespace between sections */
    .form-group {
        margin-bottom: 30px;
    }

    /* Add icons to form labels */
    .form-group label::before {
        content: '\f007';
        font-family: FontAwesome;
        font-size: 16px;
        color: var(--primary-color);
        margin-right: 10px;
    }

    /* Add hover effects to buttons */
    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
    }
</style>
<div class="container" style="margin-top: 150px;">
    <div class="container" style="margin-top: 150px;">
        <h1>Reset password</h1>
 <div class="form-group">
        {{ form_start(form) }}

        </div>
           <div class="form-group"> {{ form_widget(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.second) }}</div>
            <button type="submit" class="btn btn-primary">Reset Password</button>
        <div class="form-group">{{ form_end(form) }}</div>
    </div>
{% endblock %}
