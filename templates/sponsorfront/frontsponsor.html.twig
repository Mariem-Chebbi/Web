{% extends 'base_front.html.twig' %}

{% block title %}Sponser index{% endblock %}

{% block body %}
<style>
    button {
        background-color: #1ab394;
        border-color: #1ab394;
        color: #FFFFFF;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.5;
        border-radius: 3px;
    }
    table {
   border: 1px dashed #ccc;
  border-collapse: collapse;
  width: 100%
    }
    table td, table th {
  border: 1px dashed #ccc;
  padding: 10px;
  text-align: center;
}
    
</style>
<section class="services" id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-heading">

               <div class="row  border-bottom white-bg dashboard-header">

    <h1>Listes des sponsors </h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>Nom_sponser</th>
                <th>Type</th>
                <th>Evenement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponser in sponsers %}
            <tr>
                
                <td>{{ sponser.NomSponser }}</td>
                <td>{{ sponser.Type }}</td>
                <td>{{ sponser.Evenement.nomEvent }}</td>
                <td>
                <div class="main-button-gradient" style="width: 10px ; height: auto;">
                    <a href="{{ path('showsponsor', {'id': sponser.id}) }}" >show</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   <div class="center">
{{ knp_pagination_render(sponsers) }}</div>
    </div></div></div></div>
   </section>
{% endblock %}
