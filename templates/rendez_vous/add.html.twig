{% extends 'base.html.twig' %}
{% block css %}
<style>
    .form-border {
        border: 1px solid white;
        border-radius: 7px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>
{% endblock %}
{% block body %}
<div class="container" style="margin-top: 150px;">
    <div class="form-border col-8 mx-auto m-3 p-5">
        <h1 class="mb-3">Prendre un rendez-vous</h1>
        <div class="mt-3">
            <div class="col-12">
                {{ form_start(form,{attr: {'novalidate': 'novalidate'}})}}
                {{ form_label(form.id_personnel,"Personnels") }}
                {{ form_widget(form.id_personnel) }}
                <div class="class text-danger">
                    {{ form_errors(form.id_personnel) }}
                </div>
            </div>
            <div class="col-12 row">
                <div class="col-10">
                    {{ form_label(form.date_rdv,"Date") }}
                    {{ form_widget(form.date_rdv) }}
                    <div class="class text-danger">
                        {{ form_errors(form.date_rdv) }}
                    </div>
                </div>
                <div class="col-2 mt-4">
                    {{ form_end(form) }}
                </div>
                <div class="text-danger">{{erreur}}</div>
            </div>



            {% if heureDeb is same as 0 and heureFin is same as 0 and showForm is same as false %}
            <div style="visibility: hidden;">
                {{ form_start(form2) }}
                {{ form_label(form2.heure) }}
                {{ form_widget(form2.heure) }}
                {{ form_errors(form2.heure) }}
                {{ form_end(form2) }}
            </div>
            {% endif %}
            {% if not(heureDeb is same as 0) and not(heureFin is same as 0) and showForm is same as true %}
            <div class="col-12">
                {{ form_start(form2,{attr: {'novalidate': 'novalidate'}}) }}
                {{ form_label(form2.heure) }}
                {{ form_widget(form2.heure) }}
                {{ form_errors(form2.heure) }}
                <div class="class mt-3">
                    {{ form_end(form2) }}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}