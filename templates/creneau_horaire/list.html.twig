{% extends 'base.html.twig' %}
{% block css %}
<style>
    th,
    td {
        border: 2px solid black;
        text-align: center;
    }

    td {
        height: 80px;
        font-weight: bold;
    }

    th {
        border-right: 2px solid white;
        height: 120px;
        background-color: black;
        color: white;
    }

    table {
        border: 2.5px solid black;
        text-align: center;
        width: 100%;
    }
</style>
{% endblock %}
{% block body %}
<div class="container" style="margin-top: 150px;">
    <div class="main-button-gradient">
        <a href="{{path('add_creneau')}}" class="text-button">Définir les horaires</a>
    </div>
    <table class="mt-4">
        <tr>
            <!-- {% for jr in creneaux %}
            <th style="border: solid black 2px;">
                {{jr.jour}}
            </th>
            {% endfor %} -->
            <th>Dimanche</th>
            <th>Lundi</th>
            <th>Mardi</th>
            <th>Mercredi</th>
            <th>Jeudi</th>
            <th>Vendredi</th>
            <th>Samedi</th>
        </tr>
        <tr>
            {% for cr in creneaux %}
            {% if cr.etat %}
            <td style="border: solid black 2px;">
                fermé
                <a href="{{path('edit_creneau',{'id':cr.id})}}" class="text-warning p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path
                            d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg>
                </a>
            </td>
            {% endif %}
            {% if not(cr.etat) and not(cr.HeureDebut == 0 and cr.HeureFin == 0) %}
            <td style="border: solid black 2px;">
                de {{cr.heureDebut}}h à {{cr.heureFin}}h
                <a href="{{path('edit_creneau',{'id':cr.id})}}" class="text-warning p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path
                            d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg>
                </a>
            </td>
            {% endif %}
            {% if not(cr.etat) and cr.HeureDebut == 0 and cr.HeureFin == 0 %}
            <td style="border: solid black 2px;">
                non défini
            </td>
            {% endif %}
            {% endfor %}
        </tr>
    </table>
</div>
{% endblock %}