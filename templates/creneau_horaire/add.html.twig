{% extends 'baseRdv.html.twig' %}
{% block css %}
<style>
    .form-border {
        border: 1px solid white;
        border-radius: 7px;
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    }
</style>
{% endblock %}
{% block body %}
<div class="container" style="margin-top: 150px;">
    <div class="main-button-gradient">
        <a href="{{path('list_creneau')}}" class="text-button">Liste de mes Horaires</a>
    </div>

    <div class="form-border col-8 mx-auto m-3 p-5">
        <h1 class="mb-3">Ajouter le créneau horaire</h1>
        <div class="mt-3">
            {{ form_start(formAdd, {attr: {'novalidate': 'novalidate'}}) }}
            {% if showHeureError %}
            <div class="alert alert-danger">
                {{ form_errors(formAdd) }}
            </div>
            {% endif %}
            {% if showJourError %}
            <div class="alert alert-danger">
                {{ form_errors(formAdd.jour) }}
            </div>
            {% endif %}
            <div class="col-10">
                {{ form_label(formAdd.jour,"Jour") }}
                {{ form_widget(formAdd.jour) }}
            </div>
            <div class="my-3 row">
                <div class="col-5">
                    {{ form_label(formAdd.heureDebut,"Heure début") }}
                    {{ form_errors(formAdd.heureDebut) }}
                    {{ form_widget(formAdd.heureDebut) }}
                </div>

                <div class="col-5">
                    {{ form_label(formAdd.heureFin) }}
                    {{ form_errors(formAdd.heureFin) }}
                    {{ form_widget(formAdd.heureFin) }}
                </div>
            </div>
            <div class="col-4">
                {{ form_label(formAdd.etat) }}
                {{ form_errors(formAdd.etat) }}
                {{ form_widget(formAdd.etat) }}
            </div>
            <div class="my-2 d-flex justify-content-md-end">
                {{ form_end(formAdd) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}