{% extends 'base_front.html.twig' %}

{% block formation %}
<li class="has-sub">
    <a href="javascript:void(0)">Formations</a>
    <ul class="sub-menu">
        <li><a href="{{path('afficheC')}}">Formations</a></li>
        <li><a href="{{path('afficheCertif')}}">Mes certifs</a></li>
        
    </ul>
</li>
{% endblock %}

{% block body %}
<section class="services" id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-heading">
        
            <h4>Mes <em>Certificats</em></h4>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="owl-service-item owl-carousel">

          {% for i in Certification %}
            <div class="item">
              <div class="service-item">
                <div class="icon">
                  <img src= "{{ asset('images/' ~ i.image) }}" style="width: 100%; height: auto;" />
                </div>
                <h4>{{i.dateCertif|date('Y-m-d')}}</h4>
                <p>{{i.idFormation.libelle}}</p>
              </div>
            </div>
            {% endfor %}

          </div>
        </div>
      </div>
    </div>

  </section>

{% endblock %}