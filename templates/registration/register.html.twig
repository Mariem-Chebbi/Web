{% extends 'base_front.html.twig' %}

{% block title %}Create an Account - My Website{% endblock %}

{% block body %}
<style>
    /* Define the primary color */
    :root {
        --primary-color: #007bff;
    }

    /* Use the primary color for headings and buttons */
    h3, .btn-primary {
        color: var(--primary-color);
    }

    /* Increase the font size of headings */
    h3 {
        font-size: 36px;
    }

    /* Add more whitespace between sections */
    .form-group {
        margin-bottom: 30px;
    }

    /* Add icons to form labels */
    .form-group label::before {
        content: '\f007';
        font-family: FontAwesome;
        font-size: 16px;
        color: var(--primary-color);
        margin-right: 10px;
    }

    /* Add hover effects to buttons */
    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
    }
</style>

<div class="container" style="margin-top: 130px;">
    <div class="container" style="margin-bottom: 130px;">

        <section class="contact-us" id="contact-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent text-center">
                                <h3 class="mb-0 display-4 text-primary">Create an Account</h3>
                            </div>
                            <div class="card-body">
                                {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}}) }}
                                <div class="form-group">
                                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
                                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(registrationForm.Password, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                                    {{ form_widget(registrationForm.Password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                                    {{ form_errors(registrationForm.Password,{'attr':{'class':'text-danger'}}) }}
                                </div>
                                <div class="form-group roles-inline">
                                    {{ form_label(registrationForm.roles, null, {'label_attr': {'style': 'color: var(--primary-color)'}}) }}
                                    {{ form_widget(registrationForm.roles) }}
                                    {{ form_errors(registrationForm.roles) }}
                                </div>



 <div class="form-group">
                 {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'font-weight-bold'}}) }}

                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
                {{ form_errors(registrationForm.nom,{'attr':{'class':'text-danger'}}) }}
              </div>
              <div class="form-group">
                  {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'font-weight-bold'}}) }}

                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
                {{ form_errors(registrationForm.prenom,{'attr':{'class':'text-danger'}}) }}
              </div>
              <div class="form-group">
                  {{ form_label(registrationForm.num_tel, null, {'label_attr': {'class': 'font-weight-bold'}}) }}

                {{ form_widget(registrationForm.num_tel, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
                {{ form_errors(registrationForm.num_tel,{'attr':{'class':'text-danger'}}) }}
              </div>
              <div class="form-group">
  {{ form_label(registrationForm.ville, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(registrationForm.ville, {'attr': {'class': 'form-control', 'placeholder': 'City'}}) }}
                {{ form_errors(registrationForm.ville,{'attr':{'class':'text-danger'}}) }}
              </div>
              <div class="form-group">
  {{ form_label(registrationForm.date_naissance, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(registrationForm.date_naissance, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.date_naissance,{'attr':{'class':'text-danger'}}) }}
              </div>
              <div class="form-group">
  {{ form_label(registrationForm.image, null, {'label_attr': {'class': 'font-weight-bold'}}) }}
                {{ form_widget(registrationForm.image, {'attr': {'class': 'form-control-file'}}) }}
                {{ form_errors(registrationForm.image,{'attr':{'class':'text-danger'}}) }}
                              </div>
                              <button type="submit" class="btn btn-save">Save</button>


                                    {{ form_end(registrationForm) }}
        </div> </div> </div> </div></section></div></div>
        {% endblock %}


