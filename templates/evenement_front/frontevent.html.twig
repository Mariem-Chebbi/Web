{% extends 'base_front.html.twig' %}

{% block body %}

<style>
    button {
        background-color: #1ab394;
        border-color: #1ab394;
        color: #FFFFFF;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.5;
        border-radius: 3px;
    }
    table {
   border: 1px dashed #ccc;
  border-collapse: collapse;
  width: 100%
    }
    table td, table th {
  border: 1px dashed #ccc;
  padding: 10px;
  text-align: center;
}
    
</style>
<section class="services" id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-heading">

               <div class="row  border-bottom white-bg dashboard-header">

    <h1>Listes Des Evenements</h1>
    <br></br>
    
    <br></br>
    

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom_event</th>
                <th>Lieu_event</th>
                <th>Description</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                {# <th>Sponsor</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                
                <td>{{ evenement.nomEvent }}</td>
                <td>{{ evenement.LieuEvent }}</td>
                <td>{{ evenement.Description }}</td>
                <td>{{ evenement.DateDebut ? evenement.DateDebut|date('Y-m-d ') : '' }}</td>
                <td>{{ evenement.DateFin ? evenement.DateFin|date('Y-m-d ') : '' }}</td>
                {# <td>{{ evenement.getSponser.NomSponser }}</td> #}
                <td>
                <div class="main-button-gradient" style="width: 10px ; height: auto;">
                    <a  href="{{ path('showevent', {'id': evenement.id}) }}" >show</a>
            
                    
                            
                         
                        </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <form id="search-form" action="{{path('search_evenementfront')}}">
     <input type="text" placeholder="Search here..." name ="term" id="search-input" style="width: 100%;"></form><br><br>
    <div class="center">
     <div class="center">
{{ knp_pagination_render(evenements) }}</div>

   </div></div></div></div>
   </section>

{% endblock %}
