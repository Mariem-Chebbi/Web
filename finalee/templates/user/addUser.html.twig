                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    
                            
                            <div class="col-sm-6"><h3>List des utilisateurs</h3>
                                
                                
                                <table>
                                    <tr>
                                    <th>  Id  </th>
                                    <th>  email  </th>
                                    <th>  roles </th>
                                    {# <th>  password  </th> #}
                                     <th>  nom  </th>
                                      <th>  prenom  </th>
                                       <th>  num_tel  </th>
                                        <th>  ville  </th>
                                        <th>  date_naissance  </th>
                                        <th>  image  </th>
                                    <th>  action  </th>
                                    </tr>
                                    <tr>



                                    {% for i in User %}
                                        <td>{{i.id}}</td>
                                        <td>{{i.email}}</td>
                                        <td>{{i.roles ? i.roles|json_encode : ''}}</td>
                                        {# <td>{{i.password}}</td> #}
