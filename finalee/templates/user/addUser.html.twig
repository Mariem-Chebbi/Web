                                        <td>{{i.prenom}}</td>
                                        <td>{{i.NumTel}}</td>
                                        <td>{{i.ville}}</td>
                                        <td>{{i.DateNaissance|date('Y-m-d')}}</td>
                                        
                                        <td><img src= "{{ asset('images/' ~ i.image) }}" style="width: 50px; height: auto;" /></td>
                                        <td>
                                            <a href="{{path('supprimerU',{'id':i.id}) }}" class="btn btn-white">Supprimer</a><br>
                                            <a href="{{path('updatU',{'id':i.id}) }}" class="btn btn-white">modifier</a></td>
                                        </tr>
